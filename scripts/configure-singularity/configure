setup() {
    local a xdg_config
    IFS=: read -a xdg_config <<< "${XDG_CONFIG_HOME:-$HOME/.config}:${XDG_CONFIG_DIRS:-/etc/xdg}"
    for a in "${xdg_config[@]}"; do
        if [ -e "${a}"/clusterware/config.rc ]; then
            source "${a}"/clusterware/config.rc
            break
        fi
    done
    if [ -z "${cw_ROOT}" ]; then
        echo "$0: unable to locate clusterware configuration"
        exit 1
    fi
    kernel_load
}

main() {
    local checksum
    checksum="dbc02b17f15680c378c1ec9e4d80956d"
    
    cd /tmp
    wget https://github.com/singularityware/singularity/releases/download/2.3/singularity-2.3.tar.gz
    
    if [ "$checksum" != "$(md5sum singularity-2.3.tar.gz |awk '{print $1}')" ] ; then
        echo "Sorry, the downloaded tarball has a mismatching checksum"
        exit 1
    fi
    
    tar xzf singularity-2.3.tar.gz
    cd singularity-2.3
    
    ./configure --prefix=/usr/local/
    make
    make install
}

setup

main "$@"
